<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstPlayerWin"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player VS Computer"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#0c7b00"
        android:textSize="25dp"
        android:layout_marginTop="8dp"
        android:elevation="6dp"
        android:stateListAnimator="@null"
        android:translationZ="4dp"
        android:background="#000000"
        android:id="@+id/buttonComputer" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Player 1"
        android:textSize="25dp"
        android:elevation="6dp"
        android:stateListAnimator="@null"
        android:translationZ="4dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#b50926"
        android:id="@+id/buttonPlayer1">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:textSize="25dp"
        android:layout_marginTop="8dp"
        android:elevation="6dp"
        android:stateListAnimator="@null"
        android:translationZ="4dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#08a600"
        android:id="@+id/buttonPlayer2">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textColor="#0c7b00"
        android:textSize="25dp"
        android:layout_marginTop="8dp"
        android:elevation="6dp"
        android:stateListAnimator="@null"
        android:translationZ="4dp"
        android:background="#000000"
        android:id="@+id/buttonStart" />

</LinearLayout>